<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/common_google_signin_btn_text_dark_default">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trackerImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/trackerIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trackerImageView"
            android:layout_alignBottom="@+id/linearlayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="TrackerID here"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <TextView
        android:id="@+id/trackerNameTextView"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="109dp"
        android:layout_toEndOf="@+id/linearlayout"
        android:text="Name here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/trackerStatus"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_alignEnd="@+id/linearlayout"
        android:layout_alignBottom="@+id/linearlayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="35dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/userstateoff" />

    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@+id/trackerDistanceTextView"
        android:layout_alignBottom="@+id/trackerStatus"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="-19dp"
        android:layout_toEndOf="@+id/linearlayout"
        android:text="Timestamp here"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/trackerDistanceTextView"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackerNameTextView"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/linearlayout"
        android:text="Distance here"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/battery"
        android:layout_width="54dp"
        android:layout_height="57dp"
        android:layout_alignBottom="@+id/timestampTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="13dp"
        app:srcCompat="@drawable/levelofb" />

</RelativeLayout>